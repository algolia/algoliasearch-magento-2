<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Algolia_AlgoliaSearch::css/indexing-manager.css"/>
    </head>
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Magento\Backend\Block\Template" name="indexing_manager_form" template="Algolia_AlgoliaSearch::indexing-manager/form.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Algolia\AlgoliaSearch\ViewModel\Adminhtml\IndexingManager\Form</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Backend\Block\Template" name="indexing_manager_overview" template="Algolia_AlgoliaSearch::indexing-manager/overview.phtml" >
                <block class="Magento\Backend\Block\Template" name="indexing_manager_products" template="Algolia_AlgoliaSearch::indexing-manager/section.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">Algolia\AlgoliaSearch\ViewModel\Adminhtml\IndexingManager\Section</argument>
                        <argument name="entity" xsi:type="string">products</argument>
                    </arguments>
                </block>
                <block class="Magento\Backend\Block\Template" name="indexing_manager_categories" template="Algolia_AlgoliaSearch::indexing-manager/section.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">Algolia\AlgoliaSearch\ViewModel\Adminhtml\IndexingManager\Section</argument>
                        <argument name="entity" xsi:type="string">categories</argument>
                    </arguments>
                </block>
                <block class="Magento\Backend\Block\Template" name="indexing_manager_pages" template="Algolia_AlgoliaSearch::indexing-manager/section.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">Algolia\AlgoliaSearch\ViewModel\Adminhtml\IndexingManager\Section</argument>
                        <argument name="entity" xsi:type="string">pages</argument>
                    </arguments>
                </block>
                <block class="Magento\Backend\Block\Template" name="indexing_manager_suggestions" template="Algolia_AlgoliaSearch::indexing-manager/section.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">Algolia\AlgoliaSearch\ViewModel\Adminhtml\IndexingManager\Section</argument>
                        <argument name="entity" xsi:type="string">suggestions</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
