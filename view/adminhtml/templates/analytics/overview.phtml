            <?php if (count($this->getTopHits())): ?>
                <table>
                    <thead>
                    <tr>
                        <th><?php echo __('Query') ?></th>
                        <th><?php echo __('Count') ?></th>
                    </tr>
                    </thead>
                    <tbody>
                    <?php foreach ($this->getTopHits() as $hit): ?>
